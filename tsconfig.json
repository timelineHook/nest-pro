{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@town/*": ["src/*"],
      "@town/application": ["src/application"],
      "@town/auth": ["src/town-auth"],
      "@town/util": ["src/town.util"]
    }
  }
}